function details() {
document.getElementById("form").style.display = 'block';
}
window.onload = () => {
let button = document.querySelector("#sub");
button.addEventListener("click", calculateBMI);
};
function calculateBMI() {
document.getElementById("plan").style.display = 'block';
var h = document.getElementById("height").value;
var w = document.getElementById("weight").value;
var bmi = w / (h * h).toFixed(2);
document.getElementById("result").innerHTML = "Your BMI is as follows - " + bmi
if (bmi < 18.5) result.innerHTML =
`Under Weight : <span>${bmi}</span>`;
else if (bmi >= 18.6 && bmi < 25)
result.innerHTML =
`Normal : <span>${bmi}</span>`;
else if (bmi >= 25.1 && bmi < 30)
result.innerHTML =
`Overweight : <span>${bmi}</span>`;
else result.innerHTML =
`Obese : <span>${bmi}</span>`;
}
